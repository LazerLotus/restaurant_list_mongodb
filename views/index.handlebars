{{{alert}}}

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4>尋找餐廳</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder={{placeholder}}
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-end">
  <div id="sortSelector">
    <div class="dropdown">
      <a class="btn btn-outline-danger dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        Sort{{#if title}} :{{title}}{{/if}}
      </a>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="/search?keyword={{ keyword }}&sort=name&order=asc&title=A->Z">from A to Z</a>
        </li>
        <li><a class="dropdown-item" href="/search?keyword={{ keyword }}&sort=name&order=desc&title=Z->A">from Z to
            A</a></li>
        <li><a class="dropdown-item" href="/search?keyword={{ keyword }}&sort=category&order=asc&title=Category">By
            Category</a></li>
        <li><a class="dropdown-item" href="/search?keyword={{ keyword }}&sort=location&order=asc&title=Location">By
            location</a></li>
      </ul>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">

    <!-- Generate Card for each restaurant-->
    {{#each restaurants}}
    <div class="col-sm-4">
      <a href="/restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top" src={{this.image}} alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="card-footer d-flex justify-content-end flex-wrap">
            <a href="/restaurants/{{this._id}}/edit" class="btn btn-link btn-sm"> Edit</a>
            <a href="/restaurants/{{this._id}}" class="btn btn-link btn-sm"> Detail</a>
            <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>

        </div>
      </a>

    </div>

    {{/each}}
  </div>
</div>